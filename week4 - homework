# Practice Problem 1
# Prompting user to enter a number
n = int(input("Please Enter any Number: "))
# Print all whole numbers from 1 to user input number, n 
print("All Whole Numbers from 1 to", n) 
i = 1 
while i <= n:
    print(i)
    i = i + 1


# Practice Problem 2
# Prompting user to enter a number
n = int(input("Please Enter any Number: "))
# Print all whole numbers from user input number, n, to 1
print("All Whole Numbers from", n, "to 1")
i = n
while i >= 1:
    print(i, end = '  ')
    i = i - 1


# Practice Problem 3
# Print all letters from a - z
print("All letters from a to z")
# Using ASCII Binary Character Table in for loop (couldn't figure out how to do this with a while loop)
for a in range(65,90):
    print(chr(a),end='  ')

#Practice Problem 4
#Print all even numbers between 1 and 100
print("All Even Numbers between 1 and 100")
i = 2
while i <= 100:
    print(i)
    i += 2

#Practice Problem 5
#Print all odd numbers between 1 and 100
print("All Odd Numbers between 1 and 100")
i = 1
while i <= 100:
    print(i)
    i += 2

#Practice Problem 6
#Prompting user to enter a number
n = int(input("Please Enter any Number: "))
#Print the sum of all whole numbers from 1 to user input number, n 
print("Sum of All Whole Numbers from 1 to", n) 
sum = 0
while n >= 0:
    sum += n
    n -= 1
print("sum =", sum)

#Practice Problem 7
#Prompting user to enter a number
n = int(input("Please enter a number for a multiplication table:  "))
count = 1
# While loop for iterating the multiplication n times
print("The Multiplication Table of:", n)
while count <= 10:
    n = n * 1
    print(n, 'x', count, '=', n * count)
    count += 1
